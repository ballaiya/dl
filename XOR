# --- XOR Problem using MLPClassifier ---
import numpy as np
from sklearn.neural_network import MLPClassifier
from sklearn.metrics import confusion_matrix

# XOR input and output
X = np.array([[0,0], [0,1], [1,0], [1,1]])
y = np.array([0, 1, 1, 0])

# MLP model with one hidden layer of 2 neurons
model = MLPClassifier(hidden_layer_sizes=(2,),
                      activation='tanh',
                      solver='adam',
                      max_iter=5000,
                      random_state=1)

# Train the model
model.fit(X, y)

# Predict on the same inputs
y_pred = model.predict(X)

# Results
print("Input:\n", X)
print("Expected Output:\n", y)
print("Predicted Output:\n", y_pred)
print("\nConfusion Matrix:\n", confusion_matrix(y, y_pred))
